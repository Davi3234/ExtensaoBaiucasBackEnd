#!/sr/bin/env php
<?php

require __DIR__ . '/../initialize.php';

use Core\Managers\RequestManager;

class CoreCli {

  function execute($command) {
    try {
      switch ($command) {
        case 'routers:all':
          $this->listAllRouters();
          break;
        case 'routers:build':
          $this->routerBuild();
          break;
      }
    } catch (\Exception $err) {
      echo "Error: {$err->getMessage()}";
    }
  }

  function listAllRouters() {
    $routers = require __DIR__ . '/../public/routers.php';
    $endpoints = (new RequestManager($routers))->listAllEndpoints();

    $table = [['Method', 'Endpoint', 'Controller::method']];
    foreach ($endpoints as $method => $endpointRouters) {
      foreach ($endpointRouters as $endpoint) {
        $table[] = [$method, $endpoint['endpoint'], $endpoint['controller']];
      }
    }

    $mask = "| %6s | %-30s | %-50s |" . PHP_EOL;
    foreach ($table as $line) {
      printf($mask, $line[0], $line[1], $line[2]);
    }
  }

  function routerBuild() {
    $routers = require __DIR__ . '/../public/routers.php';

    (new RequestManager($routers))->storageEndpoints();

    echo "File \"routers.json\" created successfully";
  }
}

(new CoreCli)->execute($argv[1] ?? '');

echo PHP_EOL;
