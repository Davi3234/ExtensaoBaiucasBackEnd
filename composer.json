{
  "scripts": {
    "start": "php -S localhost:8080 public/index.php",
    "tests:all": "php vendor/bin/phpunit Tests --colors",
    "tests:davi": "phpunit --testsuite Davi",
    "tests:daiane": "phpunit --testsuite Daiane",
    "tests:danrley": "phpunit --testsuite Danrley",
    "tests:luana": "phpunit --testsuite Luana"
  },
  "require": {
    "doctrine/orm": "^3",
    "doctrine/dbal": "^4",
    "symfony/cache": "^7",
    "vlucas/phpdotenv": "^5.6",
    "firebase/php-jwt": "^6.10"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "config/",
      "Controllers\\": "controllers/",
      "Common\\": "common/",
      "Core\\": "core/",
      "Exception\\": "exceptions/",
      "Provider\\": "providers/",
      "Public\\": "public/",
      "Util\\": "util/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TestsUnit\\": "tests/Unit",
      "TestsPerformance\\": "tests/Performance"
    }
  }
}